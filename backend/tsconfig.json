{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
